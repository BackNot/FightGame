@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")


</head>
<body>
    <div class="container-fluid  d-flex flex-column">
        <div class="row ">
            <!-- Header-->
            <div class="col-md-12 flex-grow-1">
                <img src="/Images/logo.jpg" class="img-logo" />
            </div>
        </div>

        <!--Navigation-->
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item ">
                                <a class="nav-link" href="~/Home">Home </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Information">Information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Ranking">Ranking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Fight">Fight</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Roulette">Casino</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Train">Training zone</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/MyProfile">My profile</a>
                            </li>
                        </ul>
                        @{

                            if (User.Identity.GetUserId() == null) //What to show if user is logged in or not
                            {


                                <ul class="navbar-nav ml-auto">

                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Account/Register">Register</a>
                                    </li>
                                    <li class="nav-item ">
                                        <a class="nav-link" href="~/Account/Login">Log in</a>
                                    </li>
                                </ul>
                            }
                            else
                            {


                                <ul class="navbar-nav ml-auto">

                                    <li class="nav-item ">
                                        <a class="nav-link" href="~/Account/Manage">Account settings</a>
                                    </li>
                                    <li class="nav-item ">
                                        <a class="nav-link mr-auto" href="~/Account/LogOff">Log off</a>
                                    </li>
                                </ul>
                            }
                        }



                    </div>

                </nav>
            </div>
        </div> <!-- End navigation-->

        <div class="row flex-grow-1 ">
            <!-- Content-->
            <div class="col-md-2  leftLogo">
                <!-- left background zone-->
            </div>
            <div class="col-md-8">
                @RenderBody()

            </div>
            <div class="col-md-2 rightLogo">
                <div class="div-cont"></div>
                <!-- right background zone-->

            </div>
        </div>


        <div class="row align-items-end">
            <!-- Footer-->
            <div class="col-md-12">
                <footer class="navbar-fixed-bottom text-white">
                    <p>&copy; 2018 Fight Game by BackNot</p>
                </footer>
            </div>
        </div>

    </div>
    <!--End container-->
    @{
        // Scripts.Render("~/bundles/jquery")
        //  Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false);
    }

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!--  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"  />-->
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/custom/mainscript.js"></script>
    <script type="text/javascript" src="~/Scripts/custom/rouletteEngine.js"></script> <!-- for the roulette in the casino-->

</body>
</html>
